@model AplicacaoDeEstudoASPNETMVC.Models.Cliente

@{
    ViewBag.Title = "Excluir";
}
<div class="container body-content">
    <div class="row">
        <h2>Excluir um registro</h2>

        <h3>Você deseja realmente excluir esse registro?</h3>
        <div>
            <h4 class="fonts space">Cliente</h4>
            <hr />
            <dl class="dl-horizontal fonts">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Endereco)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="btn-space">
                        <input type="submit" value="Excluir" class="btn btn-default" />
                        <div>
                            <a class="btn btn-add" href="/Clientes">Voltar a página inicial</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>